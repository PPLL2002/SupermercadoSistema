<Window x:Class="Visao.TelaGerente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Visao"
        mc:Ignorable="d"
        Title="Gerente" Height="350" Width="250">
    <Grid>
        <GroupBox Header="Gerente" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Button Content="Gerenciar Fornecedores" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150" Height="30" Click="btnCadastrarForne" />
                <Button Content="Cadastrar Compras" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150" Height="30" Click="btnCadComp"/>
                <Button Content="Verificar Estoque" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150" Height="30" Click="btnEstoque"/>
                <Button Content="Alterar Dados" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150" Height="30" Click="btnAlterarDados"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
