<Window x:Class="Visao.TelaGerente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Visao"
        mc:Ignorable="d"
        Title="TelaGerente" Height="450" Width="250">
    <Grid>
        <GroupBox Header="Gerente" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Button Content="Cadastrar Fornecedores" Click="btnCadastrarF" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150" Height="30" />
                <Button Content="Cadastrar Produtos" Click="btnCadastrarP" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150" Height="30" />
                <Button Content="Cadastrar Compras" Click="btnCadastrarC" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150" Height="30" />
                <Button Content="Verificar Estoque" Click="btnVerEstoque" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150" Height="30" />
            </Grid>
        </GroupBox>
    </Grid>
</Window>
